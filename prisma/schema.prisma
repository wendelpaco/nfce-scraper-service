generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UrlQueue {
  id          String      @id @default(uuid())
  url         String
  webhookUrl  String?
  status      String      @default("PENDING") // "PENDING" | "PROCESSING" | "DONE" | "ERROR"
  bullJobId   String?
  createdAt   DateTime    @default(now())

  notaResults NotaResult[]

  @@index([status])
  @@index([createdAt])
}

model NotaResult {
  id          String     @id @default(uuid())
  url         String
  webhookUrl  String?
  jsonData    Json
  createdAt   DateTime   @default(now())

  urlQueueId  String
  urlQueue    UrlQueue   @relation(fields: [urlQueueId], references: [id])

  @@index([urlQueueId])
}
